{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Pagination": {
    "DefaultPageSize": 10,
    "MaxPageSize": 50
  },
  "FileUpload": {
    "MaxFileSizeBytes": 5242880,
    "AllowedImageExtensions": [ ".jpg", ".jpeg", ".png", ".webp" ],
    "AllowedDocumentExtensions": [ ".pdf", ".doc", ".docx" ],
    "StoragePath": "wwwroot/uploads"
  },
  "Stripe": {
    "PublishableKey": "",
    "WebhookSecret": ""
  }
}
